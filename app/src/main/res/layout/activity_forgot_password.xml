<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forgot_password_btn_login_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:textAllCaps="true"
                android:text="Don't worry! Just enter your email ID below and we'll send you the password reset instructions."
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorLightBlack"/>

            <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:text="PHONE NUMBER OR EMAIL"
                android:id="@+id/textView"
                android:layout_marginTop="@dimen/_10sdp">

                <me.zhanghai.android.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:id="@+id/email_edit_text_forgot_password_activity"
                    android:hint="PHONE NUMBER OR EMAIL" />
            </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

            <Button
                android:id="@+id/submit_btn_forgot_password_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/custom_button_layout5"
                android:text="Reset Password"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CoverScreenActivity">

    <LinearLayout
        android:id="@+id/cover_screen_layout_cover_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:scaleType="fitXY"
            android:src="@drawable/image_1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:padding="@dimen/_16sdp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:text="Welcome To Move it"
            android:textColor="@color/colorTextSec"
            android:textSize="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/_8sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/login_btn_cover_screen_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:background="@drawable/custom_button_layout2"
                    android:text="Login"
                    android:textColor="@color/colorLightBlack"/>

                <Button
                    android:id="@+id/register_btn_cover_screen_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:background="@drawable/custom_button_layout"
                    android:text="Register"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentCardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_175sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/image_9" />

            <EditText
                android:id="@+id/card_number_edit_text_payment_card_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:drawableLeft="@drawable/ic_credit_card"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="Enter Card Number"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <EditText
                    android:id="@+id/card_exp_month_edit_text_payment_card_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:hint="MM"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/card_exp_year_edit_text_payment_card_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:hint="YYYY"
                    android:inputType="number"
                    android:maxLength="4" />

                <EditText
                    android:id="@+id/card_cvc_edit_text_payment_card_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:hint="CVC"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>

            <!--<CheckBox-->
                <!--android:id="@+id/default_check"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/_5sdp"-->
                <!--android:text="Select As Default???" />-->

            <Button
                android:id="@+id/submit_btn_payment_card_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/custom_button_layout5"
                android:text="SUBMIT"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
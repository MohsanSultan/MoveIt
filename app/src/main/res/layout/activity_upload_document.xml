<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UploadDocumentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/step1_btn_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Step 1: Driver License"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:id="@+id/driver_license_btn_upload_document_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_weight=".15"
                    android:src="@mipmap/ic_arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/driver_license_menu_layout_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/upload_driver_license_btn_upload_document_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_36sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:text="1. Please Upload Your Driver License"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/colorLightGray" />

                <LinearLayout
                    android:id="@+id/upload_vehicle_documents_btn_upload_document_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_36sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:text="2. Please Upload Your Vehicle Documents"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step2_btn_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/card_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Step 2: Vehicle Insurance"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:id="@+id/vehicle_insurance_btn_upload_document_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_weight=".15"
                    android:src="@mipmap/ic_arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehicle_insurance_menu_layout_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vehicle_insurance_menu_btn_upload_document_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_36sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:text="1. Please Upload Vehicle Insurance Documents"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/step3_btn_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/card_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".85"
                    android:paddingBottom="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:text="Step 3: Vehicle Registration"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_16ssp" />

                <ImageView
                    android:id="@+id/vehicle_registration_btn_upload_document_activity"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_weight=".15"
                    android:src="@mipmap/ic_arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehicle_registration_menu_layout_upload_document_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_view"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vehicle_registration_menu_btn_upload_document_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_26sdp"
                        android:layout_height="@dimen/_36sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:text="1. Please Upload Vehicle Registration Detail"
                        android:textColor="@color/colorLightBlack"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/custom_button_layout5"
        android:text="CONTINUE"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VehicleRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_176sdp"
                android:scaleType="fitXY"
                android:src="@drawable/image_5"
                android:background="#f1f5f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="REGISTRATION NUMBER">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:id="@+id/registration_number_vehicle_register_activity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:inputType="number"
                        android:hint="REGISTRATION NUMBER" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="REGISTRATION DATE"
                    android:textColor="#aaa"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/registration_date_vehicle_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="-- SELECT DATE --"
                    android:textColor="#000"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="REGISTRATION EXPIRY"
                    android:textColor="#aaa"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/registration_expiry_date_vehicle_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="-- SELECT DATE --"
                    android:textColor="#000"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray" />
            </LinearLayout>

            <Button
                android:id="@+id/submit_btn_register_vehicle_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/custom_button_layout5"
                android:text="CONTINUE"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
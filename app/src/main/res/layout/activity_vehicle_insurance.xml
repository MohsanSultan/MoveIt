<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VehicleInsuranceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_176sdp"
                android:background="#f1f5f8"
                android:scaleType="fitXY"
                android:src="@drawable/image_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="INSURANCE COMPANY NAME">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:id="@+id/compnay_name_vehicle_insurance_activity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="INSURANCE COMPANY NAME" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="INSURANCE TYPE">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:id="@+id/insurance_type_vehicle_insurance_activity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="INSURANCE TYPE" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="INSPECTION REPORT">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:id="@+id/inspection_report_vehicle_insurance_activity"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="INSPECTION REPORT" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="INSURANCE CERTIFICATE EXPIRES"
                    android:textColor="#aaa"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/certificate_expires_vehicle_insurance_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="-- SELECT DATE --"
                    android:textColor="#000"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:text="INSURANCE EFFECTIVE DATE"
                    android:textColor="#aaa"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/effective_date_vehicle_insurance_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_8sdp"
                    android:text="-- SELECT DATE --"
                    android:textColor="#000"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="INSURANCE CERTIFICATE IMAGE" />

                    <ImageView
                        android:id="@+id/certificate_image_vehicle_insurance_activity"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/car_place_holder" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit_btn_vehicle_insurance_activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/custom_button_layout5"
                android:text="CONTINUE"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
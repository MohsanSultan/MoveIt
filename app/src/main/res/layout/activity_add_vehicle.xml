<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddVehicleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_176sdp"
                android:scaleType="fitXY"
                android:src="@drawable/image_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/vehicle_make_spinner_add_vehicle_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:text="BRAND" />

                <Spinner
                    android:id="@+id/vehicle_model_spinner_add_vehicle_activity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="BRAND" />

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="YEAR">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="YEAR" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="COLOR">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="COLOR" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>

                <me.zhanghai.android.materialedittext.MaterialTextInputLayout
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="INTERIOR COLOR">

                    <me.zhanghai.android.materialedittext.MaterialEditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:hint="INTERIOR COLOR" />
                </me.zhanghai.android.materialedittext.MaterialTextInputLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/custom_button_layout5"
                android:text="CONTINUE"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>